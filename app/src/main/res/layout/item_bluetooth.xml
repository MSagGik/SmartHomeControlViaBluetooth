<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp"
    android:id="@+id/item_device">

    <TextView
        android:id="@+id/name_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="25dp"
        android:textColor="@color/text_turquoise_500"
        android:textColorHint="@color/text_turquoise_500"
        android:hint="@string/device_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mac_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/device_mac"
        android:textColor="@color/text_turquoise_500"
        android:textColorHint="@color/text_turquoise_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/check_device"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="false"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="@color/text_turquoise_500"/>

</androidx.constraintlayout.widget.ConstraintLayout>